{% import "macros.html.twig" as macros %}

<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{{ AntCMSDescription }}">
  <meta name="author" content="{{ AntCMSAuthor }}">
  <meta name="keywords" content="{{ AntCMSKeywords }}">
  <meta name="generator" content="AntCMS">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="{{ "Themes/Default/Assets/TinyZoom.js"|absUrl }}" defer></script>
  
  <script src="{{ "Themes/Default/Assets/prism.js"|absUrl }}" defer></script>
  <link href="{{ "Themes/Default/Assets/prism.css"|absUrl }}" rel="stylesheet">

  <style>
    .fullscreen-image {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 999;
      backdrop-filter: blur(5px);
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
  </style>

  <title>{{ AntCMSTitle }}</title>
</head>

<body>
  <div class="container" style="flex:1;">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg mb-4">
          <div class="container-fluid">
            <a class="navbar-brand" href="{{ ""|absUrl }}">{{ AntCMSSiteTitle}}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                {{ macros.generateNav(pages) }}
              </ul>
            </div>
          </div>
        </nav>

        <!-- Content -->
        {% if AntCMSAuthor is defined and themeConfig.showAuthor %}
        <p>This content was written by {{ AntCMSAuthor }}</p>
        {% endif %}
        {% block body %}
        {% endblock %}
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>

  <footer class="text-lg-start">
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
      <p>Powered by <a href="https://antcms.org">AntCMS</a></p>
      <!--AntCMS-Debug-->
    </div>
  </footer>

  {% if themeConfig.enableNestedNav %}
  <script>
      // Allowing nested dropdowns to function correctly`
      let dropdowns = document.querySelectorAll('.dropdown-toggle')
      dropdowns.forEach((dd)=>{
        dd.addEventListener('click', function (e) {
          var el = this.nextElementSibling
          el.style.display = el.style.display==='block'?'none':'block'
        })
      })
    </script>
  {% endif %}
</body>
</html>
